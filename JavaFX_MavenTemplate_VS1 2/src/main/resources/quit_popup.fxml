<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="QuitPopup"
            prefHeight="400.0" prefWidth="600.0">
    <Label fx:id="text" text="Are you sure you want to quit?" ></Label>
    <Button fx:id="yesButton" text="Yes" onAction="#quitProgram"></Button>
    <Button fx:id="noButton" text="No" onAction="#quitPopupWindow"></Button>

</AnchorPane>
